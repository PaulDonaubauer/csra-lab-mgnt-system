# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /														controllers.HomeController.index

# Dashboard page, getting some base styling out of the way
GET     /dashboard									controllers.DashboardController.index
GET 		/noscript										controllers.ExampleController.noscript
GET 		/script											controllers.ExampleController.script
GET 		/item												controllers.InventoryController.index
GET 		/item/:id										controllers.InventoryController.show(id:Integer)
GET 		/items											controllers.InventoryController.index
GET 		/ticket											controllers.TicketController.index
GET 		/ticket/:id									controllers.TicketController.show(id:Integer)
GET 		/tickets										controllers.TicketController.index
GET 		/user												controllers.UserController.index
GET 		/user/:id										controllers.UserController.show(id:String)
GET 		/users											controllers.UserController.index

# An example controller showing how to use dependency injection
GET     /count											controllers.CountController.count
GET 		/counter										controllers.CountController.index
GET     /message										controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file								controllers.Assets.versioned(path="/public", file: Asset)